<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserProfile"
    android:background="#FAD6A1"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:padding="20dp"
            android:background="#74FBA72B">

            <ImageView
                android:id="@+id/profileImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/me"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/miNombre"
                android:layout_width="279dp"
                android:layout_height="49dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="109dp"
                android:layout_marginTop="-80dp"
                android:layout_marginEnd="3dp"
                android:layout_marginBottom="101dp"
                android:fontFamily="@font/lemon"
                android:includeFontPadding="false"
                android:text="VANESSA KLINGER"
                android:textColor="@color/teal_200"
                android:textSize="25sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/miNombre"
                android:layout_alignBottom="@+id/miNombre"
                android:layout_marginEnd="126dp"
                android:layout_marginBottom="-3dp"
                android:includeFontPadding="false"

                android:text="Mary.V.Klinger"
                android:textColor="@color/black"
                android:textSize="20sp" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:layout_marginTop="-100dp">

            <com.google.android.material.card.MaterialCardView
                android:layout_height="125dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                app:cardBackgroundColor="#FF9800"
                app:cardElevation="10dp">
                <RelativeLayout
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:padding="5dp">
                    <ImageView
                        android:id="@+id/client"
                        android:layout_centerHorizontal="true"
                        android:layout_height="120dp"
                        android:layout_width="90dp"
                        android:onClick="intentClient"
                        android:transitionName="transitionCliente"
                        android:src="@drawable/client" />



                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_height="125dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                app:cardBackgroundColor="#FF9800"
                app:cardElevation="10dp">
                <RelativeLayout
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:padding="5dp">
                    <ImageView
                        android:id="@+id/perrsonal"
                        android:layout_centerHorizontal="true"
                        android:layout_height="120dp"
                        android:layout_width="90dp"
                        android:onClick="intentTrabajador"
                        android:transitionName="transitionTrabajador"
                        android:src="@drawable/personal" />

                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_marginTop="-15dp"
            android:background="@color/black">
            <com.google.android.material.textfield.TextInputLayout
                android:hint="Nombre "
                android:id="@+id/full_name_profile"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="MARY VANESSA KLINGER GUERRERO"
                    android:background="#FFC063"/>
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:hint="Email"
                android:id="@+id/email_profile"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"

                android:layout_marginTop="10dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:drawablePadding="10dp"
                    android:background="#FFC063"
                    android:layout_height="wrap_content"
                    android:text="maryvaness321@gmail.com"
                    android:layout_width="match_parent" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:hint="Teléfono"
                android:id="@+id/phone_profile"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:drawablePadding="10dp"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="+ 56973287883"
                    android:background="#FFC063"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:hint="Contraseña"
                android:id="@+id/pass_profile"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:drawablePadding="10dp"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:background="#FFC063"
                    android:text="ProfeHans, ACABE EL SEMESTRE PORFA"/>

            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="ACTUALIZAR DATOS"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:id="@+id/clearTextt"
                android:layout_marginTop="20dp"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>